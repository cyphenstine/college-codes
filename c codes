// #1 salary calculater

#include<stdio.h>
int main()
{
	float basic , da , ma , hra , pt , total;
	printf("enter basic salary : ");
	scanf("%f", & basic);
	printf("enter da(in percentage) : ");
	scanf("%f", & da);
	da = (basic*da)/100;
	ma = (basic*5)/100;
	hra = (basic*3)/100;
	pt = (basic*5)/1000;
	total = basic + da + ma + hra + pt;
	printf("total salary : %f", total);
	return(0);
}


// #2 simple interest calculater

#include <stdio.h>
int main()
{
	float p , t , r , i , total;
	printf("enter principle , time , interest rate : \n");
	scanf("%f %f %f",&p , &t ,&r);
	i = (p*t*r)/100;
	printf("interest : %f", i);
	total = i + p;
	printf("\nnow total : %f", total);		
	return(0);
}
